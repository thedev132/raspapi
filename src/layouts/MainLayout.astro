---
interface Props {
    title?: string;
}

const { title = 'RaspAPI YSWS' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body class="bg-slate-900 dark:bg-black text-slate-300 dark:text-green-400 dark:font-mono min-h-screen py-8">
    <slot />

    <main class="container mx-auto px-4 py-8">
        <div class="hidden dark:block">
            <slot name="programmer" />
        </div>
        <div class="dark:hidden">
            <slot name="readable" />
        </div>
    </main>
    <footer class="text-center text-green-600 text-xs py-4">
        <span class="hidden dark:inline-block">//</span> RaspAPI YSWS - Submit an API, get a Raspberry Pi!
    </footer>
</body>
</html>